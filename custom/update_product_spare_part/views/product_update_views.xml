<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!--        add new on form field-->
        <record id="view_product_update_form" model="ir.ui.view">
            <field name="name">product.template.product.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
<!--                Edite Header-->
                <xpath expr="//div[@class='oe_title']" position="replace">
                        <div class="oe_title">
                           <label for="name" string="Product Name"/>
                            <h1>
                                <div class="d-flex">
                                    <field name="priority" widget="priority" class="mr-3"/>
                                    <field class="text-break" name="name" placeholder="e.g. Product Name"/>
                                </div>
                            </h1>
                        </div>
                </xpath>

                <xpath expr="//page[@name='general_information']" position="replace">
                    <page string="General Information" name="general_information">
                        <group >
                            <group name="group_general" string="General Information" >
                                <field name="active" invisible="1"/>
                                <field name="default_code"/>
                                <field name="detailed_type"/>
                                <field name="vin"/>
                                <field name="part_number"/>
                                <field name="manufacturer"/>
                                <field name="model"/>
                                <field name="year" />
                                <field name="part_number"/>
                                <field name="weight"/>
                                <field name="volume"/>

                            </group>
                            <group name="group_general" string="Sale Price Calculator" >
                                <field name="exchange_rate" />
                                <field name="fob_usd" />
                                <field name="fob_etb" />
                                <field name="freight_cost_usd" />
                                <field name="freight_cost_etb" />
                                <field name="total_tax" />
                                <field name="total_tax_etb" />
                                <field name="standard_price_usd" />
                                <field name="profit_usd" />
                                <field name="profit" />
                                <field name="sales_price_etb" />
<!--                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>-->

                            </group>


                        </group>
                        <group>
                            <group name="group_standard_price" string="Sales unit Price" >
                                    <label for="list_price" class="mt-1"/>
                                    <div name="pricing">
                                      <field name="list_price" class="oe_inline" widget='monetary'
                                        options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                                    </div>
                                    <label for="standard_price" groups="base.group_user" attrs="{'invisible': [('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}"/>
                                    <div name="standard_price_uom" groups="base.group_user" attrs="{'invisible': [('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}" class="o_row">
                                        <field name="standard_price" widget='monetary' options="{'currency_field': 'cost_currency_id', 'field_digits': True}"/>
                                        <span groups="uom.group_uom" class="oe_read_only">per
                                            <field name="uom_name"/>
                                        </span>
                                    </div>
                                    <field name="categ_id" string="Product Category"/>
                                    <field name="company_id" groups="base.group_multi_company"
                                        options="{'no_create': True}"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="cost_currency_id" invisible="1"/>
                                    <field name="product_variant_id" invisible="1"/>
                                </group>

                        </group>
                        <group string="Internal Notes">
                                <field name="description" nolabel="1" placeholder="This note is only for internal purposes."/>
                        </group>
                    </page>
                </xpath>

            </field>
        </record>
<!--     add field on tree-->
        <record id="product_template_tree_view_inherited" model="ir.ui.view">
            <field name="name">product.template.product.tree.inherited</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="replace">
                    <tree string="Product" multi_edit="1" sample="1">
                    <header>
                        <button string="Print Labels" type="object" name="action_open_label_layout"/>
                    </header>
                        <field name="product_variant_count" invisible="1"/>
                        <field name="sale_ok" invisible="1"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="cost_currency_id" invisible="1"/>
                        <field name="name" string="Product Name"/>
                        <field name="default_code" optional="hide"/>
                        <field name="part_number"/>
                        <field name="vin"/>
                        <field name="manufacturer"/>
                        <field name="model"/>
                        <field name="year" />
                        <field name="weight"/>
                        <field name="volume"/>
                        <field name="list_price" string="Sales Price" widget='monetary' options="{'currency_field': 'currency_id'}" optional="show" decoration-muted="not sale_ok"/>
                        <field name="standard_price" widget='monetary' options="{'currency_field': 'cost_currency_id'}" optional="hide" readonly="1"/>
                        <field name="categ_id" optional="hide"/>
                        <field name="detailed_type" optional="hide" readonly="1"/>
                        <field name="type" invisible="1"/>
                        <field name="uom_id" readonly="1" optional="show" groups="uom.group_uom"/>
                        <field name="active" invisible="1"/>
                        <field name="fob_usd" optional="hide"/>
                        <field name="fob_etb" optional="hide"/>
                        <field name="freight_cost_usd" optional="hide"/>
                        <field name="freight_cost_etb" optional="hide"/>
                        <field name="total_tax" optional="hide"/>
                        <field name="total_tax_etb" optional="hide"/>
                        <field name="standard_price_usd" optional="hide"/>
                        <field name="standard_price" optional="hide"/>
                        <field name="profit_usd" optional="hide"/>
                        <field name="profit" optional="hide"/>
                        <field name="exchange_rate" optional="hide"/>
                        <field name="sales_price_etb" optional="hide"/>
                        <field name="activity_exception_decoration" widget="activity_exception"/>
                    </tree>
                </xpath>
            </field>
        </record>
<!--        Update kanban-->
        <record id="product_template_kanban_view_inherit" model="ir.ui.view">
            <field name="name">Product.template.product.kanban.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_kanban_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='oe_kanban_card oe_kanban_global_click']" position="replace">
                    <div class="oe_kanban_card oe_kanban_global_click">
                        <div class="o_kanban_image mr-1">
                            <img t-att-src="kanban_image('product.template', 'image_128', record.id.raw_value)" alt="Product" class="o_image_64_contain"/>
                        </div>

                        <div class="oe_kanban_details">
                            <div class="o_kanban_record_top mb-0">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"  style="margin-right: 5px; font-weight: bold; color: purple;">
                                        <field name="name" style="margin-right: 5px; font-weight: bold; color: purple;"/>
                                    </strong>
                                </div>
                                <strong style="color: orange;">
                                    <field name="default_code" />
                                </strong>

                            </div>
<!--                            <t t-if="record.default_code.value">[<field name="default_code"/>]</t>-->

                            <span class="o_text_overflow text-muted" style="display: inline-block; margin-bottom: 5px;">
                                <span class="fa fa-building mr-2" aria-label="Manufacturer" title="Manufacturer" style="color: purple;" ></span>
                                <span class="o_form_label" style="margin-right: 5px; font-weight: bold;  color: Light blue;">Manufacturer:</span>
                                <field name="manufacturer" style="border: 1px solid #ccc; padding: 3px 5px; border-radius: 3px; width: 150px;" />
                            </span>
                            <span class="o_text_overflow text-muted" style="display: inline-block; margin-bottom: 5px;">
                                <span class="fa fa-cogs mr-2" aria-label="VIN Number" title="VIN Number" style="color: purple;" ></span>
                                <span class="o_form_label" style="margin-right: 5px; font-weight: bold;  color: Light blue;">VIN Number:</span>
                                <field name="vin" style="border: 1px solid #ccc; padding: 3px 5px; border-radius: 3px; width: 150px;" />
                            </span>

                            <span class="o_text_overflow text-muted" style="display: inline-block; margin-bottom: 5px;">
                                <span class="fa fa-car mr-2" aria-label="Model" title="Model:" style="color: purple;"></span>
                                <span class="o_form_label" style="margin-right: 5px; font-weight: bold; ">Model:</span>
                                <field name="model" style="border: 1px solid #ccc; padding: 3px 5px; border-radius: 3px; width: 150px;" />
                            </span>
                            <span class="o_text_overflow text-muted" style="display: inline-block; margin-bottom: 5px;">
                                <span class="fa fa-id-card-o mr-2" aria-label="Part Number" title="TPart Number:" style="color: purple;"></span>
                                <span class="o_form_label" style="margin-right: 5px; font-weight: bold; color: Light blue;">Part Number:</span>
                                <field name="part_number" style="border: 1px solid #ccc; padding: 3px 5px; border-radius: 3px; width: 150px;" />
                            </span>
                            <span class="o_text_overflow text-muted" style="display: inline-block; margin-bottom: 5px;">
                                <span class="fa fa-calendar mr-2" aria-label="year" title="year:" style="color: purple;"></span>
                                <span class="o_form_label" style="margin-right: 5px; font-weight: bold; color: Light blue;">year:</span>
                                <field name="year" style="border: 1px solid #ccc; padding: 3px 5px; border-radius: 3px; width: 150px;" />
                            </span>

<!--                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>-->
                            <div t-if="record.product_variant_count.value &gt; 1" groups="product.group_product_variant">
                                <strong>
                                    <t t-esc="record.product_variant_count.value"/> Variants
                                </strong>
                            </div>
                            <div name="product_lst_price" class="fa fa-usd mt-1" style="color: purple;">
                                Price: <field name="list_price" widget="monetary" options="{'currency_field': 'currency_id', 'field_digits': True}"></field>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

