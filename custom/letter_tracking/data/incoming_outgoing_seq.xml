<!-- data/letter_tracking_data.xml -->

<odoo>
    <data noupdate="0">

        <!-- Sequence for Incoming Letters -->
        <record id="sequence_incoming_letter" model="ir.sequence">
            <field name="name">Incoming Letter Sequence</field>
            <field name="code">incoming.letter.sequence</field>
            <field name="prefix">IL</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Sequence for Outgoing Letters -->
        <record id="sequence_outgoing_letter" model="ir.sequence">
            <field name="name">Outgoing Letter Sequence</field>
            <field name="code">outgoing.letter.sequence</field>
            <field name="prefix">OL</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

    </data>
</odoo>
